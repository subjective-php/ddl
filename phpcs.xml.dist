<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <file>src</file>
    <file>tests</file>
    <arg name="colors" />
    <arg value="p" />
    <rule ref="./vendor/chadicus/coding-standard/Chadicus" />
    <arg name="report-full" />
    <rule ref="Chadicus.Methods.LongMethod.MethodTooBig">
        <exclude-pattern>tests/*Test.php</exclude-pattern>
    </rule>
</ruleset>
